//Funcion_de_Producto__Total
func ProductoTotal(arr:[Ventas])->Double{
  var array = arr
  for j in 0..<array.count{
    totalP += array[j].venta   
  }
  return totalP
}
var totalP = ProductoTotal(arr:array)
print ("Venta total por dÃ­a:")
for product in array{
  print("La venta fue de $\(product.venta) en la fecha \(product.fecha)")
}
print( "Venta promedio por dia:$\(totalP/15)")




func VentaMayor(arr:[Ventas]){
  var array = arr
  for _ in 0..<array.count-1{
    for j in 0..<array.count-1{

      if (array[j].articulos > array[j+1].articulos){
        let temp = array[j]
        array[j] = array[j+1]
        array[j+1] = temp
      } 
    }
  }

  print("la menor venta de articulos fue: \(array[0].articulos) que fue la venta:  \(array[0].posicion)")
  print("la mayor venta de producto fue:\(array[14].articulos) que fue la venta:  \(array[14].posicion)")
  

}
 VentaMayor(arr:array)


func HoraPromedio(arr:[Ventas])->Double{
  var array = arr
  for j in 0..<array.count{
    horasP += array[j].hora    
  }
  return horasP
}
var horasP = HoraPromedio(arr:array)
print ("Hora promedio en la que mas se vende: \(horasP/15) horas")
