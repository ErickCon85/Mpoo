struct Ventas  {
var fecha = "" 
var pago = ""
var venta = 0.0
var articulos = 0.0
var hora = 0.0
var posicion = 0
  
}
func Recibir( pagoP:String, fechaP:String, ventaP:Double, articulosP:Double, horaP:Double)->(String, String, Double, Double, Double){

print("Por favor escriba la fecha de la venta")
let fechaP = readLine()!

print("Por favor escriba si el pago sera en efectivo o con tarjeta")
let pagoP = readLine()!

print("Por favor escriba el total de la venta  ")
datoUsuario = readLine()!
let ventaP = Double(datoUsuario) ?? 0
 
print("Escriba en numero de artÃ­culos vendidos en la venta")
datoUsuario = readLine()!
let articulosP = Double(datoUsuario) ?? 0
 
print("Por favor escriba la Hora de la venta")
datoUsuario = readLine()!
let horaP = Double(datoUsuario) ?? 0
return(fechaP, pagoP, ventaP, articulosP, horaP)
}

var datoUsuario = ""
var fechaP = ""
var pagoP = ""
var ventaP = 0.0
var articulosP = 0.0
var horaP = 0.0
var array = [Ventas]()
print("Buenos dias")
